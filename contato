  <script>
    const qs=(s,el=document)=>el.querySelector(s);

    // Close
    qs('#closeBtn').addEventListener('click', ()=>{
      const dev = qs('.device');
      dev.style.transform = 'scale(.98) translateY(8px)';
      dev.style.opacity = '0';
      setTimeout(()=> dev.remove(), 180);
    });

    // Toast
    const toast = qs('#toast');
    function showToast(msg){ toast.textContent = msg; toast.classList.add('show'); clearTimeout(showToast._t); showToast._t = setTimeout(()=> toast.classList.remove('show'), 1600); }

    // WhatsApp
    qs('#btnWhats').addEventListener('click', ()=>{ window.open(qs('#waLink').href, '_blank', 'noopener'); });

    // Copy contacts
    qs('#btnCopy').addEventListener('click', async ()=>{
      const text = [
        'KitNet Fácil',
        'E-mail: contato@kitnetfacil.com.br',
        'WhatsApp: +55 11 91234-5678',
        'Telefone fixo: (11) 4002-5678',
        'Endereço: Rua das Flores, 123, Centro – São Paulo/SP',
        'Atendimento: Seg–Sex, 9h–18h'
      ].join('\n');
      try{ await navigator.clipboard.writeText(text); showToast('Contatos copiados 👍'); }
      catch{ showToast('Não foi possível copiar'); }
    });

    // Exemplo: vincular redes (substitua os # pelo seu perfil real)
    qs('#ig').addEventListener('click', (e)=>{ e.preventDefault(); showToast('Abrir Instagram @kitnetfacil'); });
    qs('#fb').addEventListener('click', (e)=>{ e.preventDefault(); showToast('Abrir Facebook /kitnetfacil'); });
    qs('#tt').addEventListener('click', (e)=>{ e.preventDefault(); showToast('Abrir TikTok @kitnetfacil'); });
  </script>
