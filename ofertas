  <script>
    const qs=(s,el=document)=>el.querySelector(s);
    const qsa=(s,el=document)=>[...el.querySelectorAll(s)];

    // Close
    qs('#closeBtn').addEventListener('click', ()=>{
      const dev = qs('.device');
      dev.style.transform = 'scale(.98) translateY(8px)';
      dev.style.opacity = '0';
      setTimeout(()=> dev.remove(), 180);
    });

    // Carousel helpers
    function makeCarousel(root){
      const track = qs('.track', root);
      const cards = qsa('.card', track);
      const btns = qsa('.nav button', root);
      let i = 0;
      const step = ()=> track.clientWidth * 0.7 + 12; // card width + gap
      const clamp = v=> Math.max(0, Math.min(v, cards.length-1));
      const go = (idx)=>{ i = clamp(idx); track.scrollTo({left: i*step(), behavior:'smooth'}); };
      btns[0].addEventListener('click', ()=> go(i-1));
      btns[1].addEventListener('click', ()=> go(i+1));
      // Drag wheel (shift+wheel for horizontal)
      root.addEventListener('wheel', (e)=>{ if(Math.abs(e.deltaX) < Math.abs(e.deltaY)) return; e.preventDefault(); track.scrollLeft += e.deltaX; }, {passive:false});
      // Resize recalibration
      addEventListener('resize', ()=> go(i));
      // Auto center on load
      setTimeout(()=> go(1), 150);
    }

    makeCarousel(qs('#c1'));
    makeCarousel(qs('#c2'));
  </script>
