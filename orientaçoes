  <script>
    const qs = (s, el=document)=> el.querySelector(s);

    // Close
    qs('#closeBtn').addEventListener('click', ()=>{
      const dev = qs('.device');
      dev.style.transform = 'scale(.98) translateY(8px)';
      dev.style.opacity = '0';
      setTimeout(()=> dev.remove(), 180);
    });

    // Toast
    const toast = qs('#toast');
    function showToast(msg){ toast.textContent = msg; toast.classList.add('show'); clearTimeout(showToast._t); showToast._t = setTimeout(()=> toast.classList.remove('show'), 1600); }

    // Copy helpers
    qs('#copyInq').addEventListener('click', async ()=>{
      const items = [
        'Pagar o aluguel dentro do prazo',
        'Zelar pela conserva√ß√£o do im√≥vel',
        'Respeitar as regras do contrato',
        'Comunicar problemas ao propriet√°rio'
      ].map((t,i)=> ${i+1}. ${t}).join('\n');
      try{ await navigator.clipboard.writeText(items); showToast('Lista do inquilino copiada üëç'); }
      catch{ showToast('N√£o foi poss√≠vel copiar'); }
    });

    qs('#copyProp').addEventListener('click', async ()=>{
      const items = [
        'Manter o im√≥vel limpo e em boas condi√ß√µes',
        'Descrever o im√≥vel com clareza no an√∫ncio',
        'Incluir fotos reais e atuais',
        'Ser transparente nas condi√ß√µes do contrato'
      ].map((t,i)=> ${i+1}. ${t}).join('\n');
      try{ await navigator.clipboard.writeText(items); showToast('Lista do propriet√°rio copiada üëç'); }
      catch{ showToast('N√£o foi poss√≠vel copiar'); }
    });
  </script>
