  <script>
    const qs = (s, el=document)=> el.querySelector(s);
    const qsa = (s, el=document)=> [...el.querySelectorAll(s)];

    // Close
    qs('#closeBtn').addEventListener('click', ()=>{
      const dev = qs('.device');
      dev.style.transform = 'scale(.98) translateY(8px)';
      dev.style.opacity = '0';
      setTimeout(()=> dev.remove(), 180);
    });

    // Toast
    const toast = qs('#toast');
    function showToast(msg){ toast.textContent = msg; toast.classList.add('show'); clearTimeout(showToast._t); showToast._t = setTimeout(()=> toast.classList.remove('show'), 1600); }

    // Toggle items
    qsa('.qa .q').forEach(q=>{
      q.addEventListener('click', ()=> q.parentElement.classList.toggle('open'));
    });

    // Expand/Collapse
    qs('#expandAll').addEventListener('click', ()=>{ qsa('.qa').forEach(e=> e.classList.add('open')); });
    qs('#collapseAll').addEventListener('click', ()=>{ qsa('.qa').forEach(e=> e.classList.remove('open')); });

    // Copy FAQ
    qs('#copyFaq').addEventListener('click', async ()=>{
      const text = qsa('#faq .qa').map(card=>{
        const q = card.querySelector('.q h3')?.textContent?.trim()||'';
        const a = card.querySelector('.a')?.textContent?.trim()||'';
        return Q: ${q}\nA: ${a};
      }).join('\n\n');
      try{ await navigator.clipboard.writeText(text); showToast('FAQ copiado üëç'); }
      catch{ showToast('N√£o foi poss√≠vel copiar'); }
    });

    // Filter
    const filtro = qs('#filtro');
    filtro.addEventListener('input', ()=>{
      const term = filtro.value.toLowerCase();
      qsa('#faq .qa').forEach(card=>{
        const txt = card.textContent.toLowerCase();
        card.style.display = txt.includes(term) ? '' : 'none';
      });
    });
  </script>
